<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('../partials/head.ejs') %>
		<title>Items for sale</title>
	</head>
	<body>
		<%- include('../partials/nav.ejs') %>
		<main>
		<div class="container">          
			<a href="/items/edit">Post an Item </a>
			<div class="row">
				<h1>Edit <%= item.name %></h1>
			<form action="/items/<%= item._id %>?_method=PUT" method="POST">
					<div class="row">
						<div class="input-field col s12">
							<input type="text" name="name" value="<%= item.name %>" />
							<label for="name">Item Name</label>
						</div>
					</div>
					
				<div class="row">
					<div class="input-field col s12">
						<input name="items_type" id="items_type" type="text" value="<%= item.items_type %>">
						<label for="items_type">Item type</label>
					</div>
					<div>
						<label>Description</label><br/>
						<textarea type="text" name="description" rows="7" cols="30"></textarea><br>
							<input type="submit" value="Update" />
					</div>
				</form>
			</div>
		</div>  
		</main>
	</body>
</html>